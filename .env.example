# ============================================================================
# Server Configuration
# ============================================================================
PORT=8080
NODE_ENV=development

# ============================================================================
# Firebase Configuration (REQUIRED)
# ============================================================================
FIREBASE_PROJECT_ID=your-firebase-project-id

# ============================================================================
# YanBrainServer Configuration (REQUIRED)
# ============================================================================
YANBRAIN_SERVER_URL=http://localhost:5001/api

# ============================================================================
# Provider Selection (Optional - defaults shown)
# ============================================================================
LLM_PROVIDER=openai
TTS_PROVIDER=elevenlabs
IMAGE_PROVIDER=runware
EMBEDDING_PROVIDER=openai

# ============================================================================
# API Keys (Add keys based on your selected providers)
# ============================================================================

# OpenAI API Key (required if LLM_PROVIDER=openai or EMBEDDING_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-api-key

# ElevenLabs API Key (required if TTS_PROVIDER=elevenlabs)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Runware API Key (required if IMAGE_PROVIDER=runware)
RUNWARE_API_KEY=your-runware-api-key
